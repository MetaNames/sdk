{
  "exclude": ["test", "jest.config.ts", "node_modules"] /* Exclude files and folders from the program. */,
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["es2022"],
    "module": "ES2022",
    "rootDir": "./src/",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  }
}
